{
  "sourceType": "unambiguous",
  "presets": [
    ["@babel/preset-env", { "loose": true }],
    "@babel/preset-typescript"
  ],
  "plugins": ["./scripts/babel-plugin-remove-create-require"],
  "targets": { "node": "current" },
  "env": {
    "production": {
      "targets": { "node": "6.9" }
    },
    "esm": {
      "targets": { "node": "12.20" },
      "plugins": [
        // Disable it
        ["./scripts/babel-plugin-remove-create-require", false]
      ]
    }
  }
}
